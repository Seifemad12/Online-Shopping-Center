do {
			cout << " Enter Your Password of at least 6 digits . : ";

			char a;
			for (i = 0;;)
			{
				a = _getch();
				if ((a >= 'a'&&a <= 'z') || (a >= 'A'&&a <= 'Z') || (a >= '0'&&a <= '9'))

				{
					owneer[j].password[32] = a;
					++i;
					cout << "*";
				}
				if (a == '\b'&&i >= 1)

				{
					cout << "\b \b";
					--i;
				}
				if (a == '\r')
				{
					owneer[j].password = '\0';
					break;
				}
			}

		} while (i < 5);
