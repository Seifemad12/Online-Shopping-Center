void OwnerLoginChoice()
{
    char Loginchoice;
    cout << "Do you want to login , (Y/N)?";
    cin >> Loginchoice;
    switch(Loginchoice)
    {
      case 'y':
      case 'Y':OwnerLogin();
      break;
      default: cout << "You may continue";
      break;
    }
}
void OwnerEditChoices()
