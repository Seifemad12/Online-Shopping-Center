                                cin >> OwnerRegData[i].OwnerShopInfo.Category;
                                break;
                            default: cout << "Invalid Input";
                                break;
                            }
                        }
                    else { cout << "Invalid Choice";}
                }
        }
}

void OwnerLogin()
{

    cout << "Please enter your Login Data "<<endl;
    cout << "ID :";
    cin >> LoginID;
    cout << "Password :";
    cin >> LoginPassword;
    for(int i=0 ; i < arrsize ; i++)
        {
            if( LoginID == OwnerRegData[i].ID && LoginPassword == OwnerRegData[i].Password)
                {
                    cout << " You have successfully Logged In ";
                    break;
                }

            else
                {
                    cout << "Either the ID or Password is incorrect" << endl;
                    break;
                }

        }
}
void main()
{   char Loginchoice,Editchoice;
    cout << "Do you want to login , (Y/N)?";
    cin >> Loginchoice;
    switch(Loginchoice)
    {
        case 'y':
        case 'Y':Login();
        break;
