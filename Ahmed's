#include <iostream>
#include <string>
using namespace std;
const int arrsize = 1000;
int LoginID;
string LoginPassword;
struct RegistrationData
{
    string Name;
    int ID;
    string Password;
    int Age;
    char Gender;
    string Address;

};
RegistrationData RegData[arrsize];
void Edit()
{
    int editchoices;
    cout << "Editing your information";
    for(int i=0 ; i < arrsize ; i++)
        {
            if( LoginID == RegData[i].ID)
                {
                    cout << "What do you want to edit ?" << endl;
                    cout << " 1-Name \n 2-ID \n 3-Password \n 4-Age \n 5-Gender \n 6-Address" << endl;
                    cin >> editchoices;
                    switch(editchoices)
                    {
                        case 1: cout << "Name :";
                                cin >> RegData[i].Name;
                                break;

                        case 2: cout << "ID :";
                                cin >> RegData[i].ID;
                                break;

                        case 3: cout << "Password :";
                                cin >> RegData[i].Password;
                                break;

                        case 4: cout << "Age :";
                                cin >> RegData[i].Age;
                                break;

                        case 5: cout << "Gender :";
                                cin >> RegData[i].Gender;
                                break;

                        case 6: cout << "Address :";
                                cin >> RegData[i].Address;
                                break;
                                
                       default: cout << "Invalid";
                                break;
                    }

                }
        }
}

void Login()
{

    cout << "Please enter your Login Data "<<endl;
    cout << "ID :";
    cin >> LoginID;
    cout << "Password :";
    cin >> LoginPassword;
    for(int i=0 ; i < arrsize ; i++)
        {
            if( LoginID == RegData[i].ID && (LoginPassword.compare(RegData[i].Password) == 0))
                {
                    cout << " You have successfully Logged In ";
                    break;
                }

            else
                {
                    cout << "Either the ID or Password is incorrect" << endl;
                    break;
                }

        }
}
int main()
{
    int smolnum=3;
    cout << " Fill in :-" << endl;
    for(int i=0 ; i<smolnum ; i++)
        {

            cout << "ID :";
            cin >> RegData[i].ID;
            cout << "Password :";
            cin >> RegData[i].Password;
        }
    char loginchoice,Editchoice;
    cout << "Do you want to login , (Y/N)?";
    cin >> loginchoice;
    switch(loginchoice)
    {
        case 'y':
        case 'Y':Login();
        break;
        default: cout << "You may continue";
        break;

    }
    cout << "Do you want to edit your data , (Y/N)?";
    cin >> Editchoice;
    switch(Editchoice)
    {
        case 'y':
        case 'Y':Edit();
        break;
        default: cout << "You may continue";
        break;

    }
return 0;
}
