void own() {
	fstream oowner;
	oowner.open("owner file", ios::app);
	owner owneer;
	int id = 1, a;
	char choice;
	do {
		
			cout << "Enter your name:";
			cin.getline(owneer.name, 25);
			owneer.ID = id;
			cout << "your ID is :" << owneer.ID << endl;
			id++;
			cout << "Enter your password:";
			for (int i = 0;;) {
				a = _getch();
				owneer.password[i] = a;
				cout << "*";
				i++;
				if (a == '\r') {
					owneer.password[i] = '\0';
					break;
				}if (a == '\b'&&i >= 1) {
					cout << "\b\b";
					--i;
				}
			}
			cin.getline(owneer.password, 25);
			cout << "Enter your age:";
			cin.getline(owneer.age, 25);
			cout << "Enter your gender:";
			cin.getline(owneer.gender, 25);
			cout << "Enter your address:";
			cin.getline(owneer.address, 25);
			oowner << owneer.name << '|' << owneer.ID << '|' << owneer.password << '|' << owneer.age << '|' << owneer.gender << '|' << owneer.address << endl;

			cout << "you have registered succesfully" << endl;
	cout << "Do you want to create another account?(Y/N):";
		cin >> choice;
	} while
		(choice == 'Y' || choice == 'y');
		
	
	cout << endl;
}
void shoop() {
	fstream shopp;
	
