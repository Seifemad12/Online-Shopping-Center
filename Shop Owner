#include<iostream>
#include<conio.h>
#include<string>

using namespace std;
const int arrsize = 1000;
int LogIndex;
const int maxProds = 15;

struct Product {
	string productName = { 0 };
	double productPrice = 0;
	string Category = { 0 };
	int Quantity = 0;
};
struct Shop
{
	int ShopName;
	string ShopAddress;
	string Category;
	Product products[maxProds];
};
struct Owner
{
	string Name;
	int ID;
	char Password[32];
	int Age;
	string Gender;
	string Address;
	Shop Shops;
}Owners[arrsize];


void RegOwner();
void RegShop();
void OLchoice();
void OEchoice();
int Lowner();
void Eowner(int);
void prodChoice();
void addProds();
void removeProds();
void viewProds();


int main()
{
    RegOwner();
    RegShop();
	OLchoice();
	OEchoice();
	prodChoice();
	addProds();
	removeProds();
	viewProds();

	return 0;

}
void RegOwner() {
	int a, i, id = 1, j = 0;
	char choice;

	do {

		cout << "Enter your name:";
		cin.getline(Owners[j].Name, 25);
		Owners[j].ID = id;
		cout << "your ID is :" << Owners[j].ID << endl;

		id++;

		do {
			cout << " Enter your password of at least 6 digits . : ";

			char a;
			for (i = 0;;)
			{
				a = _getch();
				if ((a >= 'a'&&a <= 'z') || (a >= 'A'&&a <= 'Z') || (a >= '0'&&a <= '9'))

				{
					Owners[j].Password = a;
					++i;
					cout << "*";
				}
				if (a == '\b'&&i >= 1)

				{
					cout << "\b \b";
					--i;
				}
				if (a == '\r')
				{
					Owners[j].Password = '\0';
					break;
				}
			}

		} while (i <= 5);
		j++;
		cout << endl;
		cout << "Enter your age:";
		cin.getline(Owners[j].Age, 25);
		cout << "Enter your gender:";
		cin.getline(Owners[j].Gender, 25);
		cout << "Enter your address:";
		cin.getline(Owners[j].Address, 25);
		cout << "You have registered successfully" << endl;
		cout << "Do you want to create another account ? (Y/N):";
		cin >> choice;
	} while (choice == 'Y' || choice == 'y');
	cout << endl;

}
void RegShop() {
	int i = 0;
	do {
		cout << "enter your shop name:";
		cin.getline(Owner[i].Shops.ShopName, 25);
		for (int j = 1; j < 1000; j++) {
			if (Owners[i].Shops.ShopName == Owners[j].Shops.ShopName) {
				cout << "This shop name has been entered before ";
				break;
			}
			else
				continue;
		}
		cout << "Enter your shop's address : ";
		cin.getline(Owners[i].Shops.Address, 25);
		cout << "Enter your shop's category : ";
		cin.getline(Owners[i].Shops.Category, 25);
		cout << endl;

	} while (false);
}

int Lowner()
{
	int j;
	bool flag = false;
	int LogID, i;
	char LogPass[32];
	cout << "Please enter your Login Data " << endl;
	cout << "ID :";
	cin >> LogID;
	do {
		cout << " Enter a Password of at least 6 digits." << endl;
		cout << "Password : ";
		char a;
		for (j = 0;;)
		{
			a = _getch();
			if ((a >= 'a'&&a <= 'z') || (a >= 'A'&&a <= 'Z') || (a >= '0'&&a <= '9'))
			{
				LogPass[j] = a;
				++j;
				cout << "*";
			}
			if (a == '\b'&&j >= 1)
			{
				cout << "\b \b";
				--j;
			}
			if (a == '\r')
			{
				LogPass[j] = '\0';
				break;
			}
		}

	} while (j <= 5);

	for (i = 0; i < arrsize; i++)
	{
		if (LogID == Owners[i].ID && LogPass == Owners[i].Password)
		{
			cout << "You have successfully Logged In. \n";
			flag = true;
			break;
		}
	}
	if (flag == false) {
		cout << "Either the ID or Password is incorrect" << endl;
		i = 1000;
	}
	return i;
}

void Eowner(int j)
{
	char editchoice, gender;
	int regedit, shopEdit;
	cout << "Editing your information\n";
	cout << "Would you like to edit your registration data or your Shop data (R/S) ? ";
	cin >> editchoice;
	if (editchoice == 'R' || editchoice == 'r') {
		cout << "What do you want to edit ? " << endl;
		cout << " 1-Name \n 2-ID \n 3-Password \n 4-Age \n 5-Gender \n 6-Address" << endl;
		cout << "Choice: "; cin >> regedit;
		switch (regedit) {
		case 1: cout << "New Name : ";
			cin >> Owners[j].Name;
			break;

		case 2: cout << "New ID : ";
			cin >> Owners[j].ID;
			break;

		case 3: cout << "New Password :";
			cin >> Owners[j].Password;
			break;

		case 4: cout << "New Age : ";
			cin >> Owners[j].Age;
			break;

		case 5: cout << "New Gender(F/M) : ";
			cin >> gender;
			if (gender == 'M' || gender == 'm')
			{
				Owners[j].Gender = "Male";
			}
			else if (gender == 'F' || gender == 'f')
			{
				Owners[j].Gender = "Female";
			}
			else { cout << "Error"; }
			break;

		case 6: cout << "New Address : ";
			cin >> Owners[j].Address;
			break;

		default: cout << "Invalid";
			break;
		}
	}
	else if (editchoice == 'S' || editchoice == 's')
	{
		cout << "What do you want to edit ?" << endl;
		cout << " 1-Shop Name \n 2-Address \n 3-Category";
		cin >> shopEdit;
		switch (shopEdit)
		{
		case 1:cout << "Shop Name : ";
			cin >> Owners[j].Shops.ShopName;
			break;
		case 2:cout << "Shop Address : ";
			cin >> Owners[j].Shops.ShopAddress;
			break;
		case 3:cout << "Category : ";
			cin >> Owners[j].Shops.Category;
			break;
		default: cout << "Invalid Input";
			break;
		}
	}
	else { cout << "Invalid Choice"; }
}

void OLchoice()
{
	char c;
	char Logchoice;
	cout << "Do you want to login , (Y/N)? ";
	cin >> Logchoice;
	do {
		switch (Logchoice)
		{
		case 'y':
		case 'Y': LogIndex = Lowner();
			break;
		default: cout << "You may continue";
			break;
		}
		if (LogIndex == 1000) {
			cout << "Would you like to try again, (Y/N)? ";
			cin >> c;
		}
		else {
			c = 'n';
		}
	} while (c == 'y' || c == 'Y');
}

void OEchoice()
{
	char Editchoice;
	cout << "Do you want to edit your data , (Y/N)? ";
	cin >> Editchoice;
	switch (Editchoice)
	{
	case'y':
	case'Y':Eowner(LogIndex);
		break;
	default:cout << "You may continue";
		break;
	}
}

void prodChoice()
{
	char choice;
	do {
		cout << "To add a product enter A. To remove a product enter R. To view your products enter V. : ";
		char choices;
		cin >> choices;
		switch (choices) {
		case 'a':
		case 'A': addProduct();
			break;
		case 'r':
		case 'R': removeProduct();
			break;
		case 'v':
		case 'V': viewProducts();
			break;
		default:
			cout << "Invalid answer";
		}
		cout << "Do you want to continue (Y/N) : ";
		cin >> choice;
		cout << endl;
	} while (choice == 'y' || choice == 'Y');
}

void addProds()
{
	do {

		char choice;

		for (int i = 0; i <= maxProds; i++) {

			if (Owners[j].Shops[j].products[i]..productPrice != 0) {
				continue;
			}

			else if (Owners[j].Shops[j].products[i].productPrice == 0) {

				cout << "Product's name : ";
				cin >> Owners[j].Shops[j].products[i].productName;

				cout << "Product's Price : $";
				cin >> Owners[j].Shops[j].products[i].productPrice;

				cout << "Product's Category : ";
				products[i].Category = shop.category;
				cout << Owners[j].Shops[j].products[i].Category << endl;

				cout << "Product's Quantity : ";
				cin >> Owners[j].Shops[j].products[i].Quantity;

				break;
			}
		}
		cout << "Do you want to enter a product ? (Y / N) : ";
		cin >> choice;

		if (choice == 'N' || choice == 'n') {
			break;
		}
		else if (choice == 'Y' || choice == 'y') {
			continue;
		}
	} while (true);
}

void removeProds()
{
	int i;
	bool same = false;
	string name;
	char choice;
	do {

		cout << "What is the name of the product you want to remove : ";
		cin >> name;
		for (i = 0; i < maxProds; i++) {
			if (name == Owners[j].Shops[j].products[i].productName) {
				same = true;
				break;
			}
		}
		if (same == true) {
			Owners[j].Shops[j].products[i].productName = { 0 };
			Owners[j].Shops[j].products[i].productPrice = 0;
			Owners[j].Shops[j].products[i].Quantity = 0;
			Owners[j].Shops[j].products[i].Category = { 0 };
		}
		else if (same == false)
			cout << "This product doesn't exist. \n";
		cout << "\nDo you want to remove another product? (Y/N) : ";
		cin >> choice;
		if (choice == 'N' || choice == 'n') {
			break;
		}

		else if (choice == 'Y' || choice == 'y') {
			continue;
		}
	} while (true);
}

void viewProds()
{
	char choice;
	do {
		cout << "Product's Name \t Product's Price \t Product's Category \t Product's Quantity \n";
		for (int i = 0; i < maxProds; i++) {
			if (Owners[j].Shops[j].products[i].productPrice != 0) {
				cout << Owners[j].Shops[j].products[i].productName << "\t \t " << Owners[j].Shops[j].products[i].productPrice << "$" << "\t \t \t " << Owners[j].Shops[j].products[i].Category << "\t  \t " << Owners[j].Shops[j].products[i].Quantity << endl;
			}
		}
		cout << "Do you want to view your products? (Y/N) : ";
		cin >> choice;
		if (choice == 'n' || choice == 'N') {
			break;
		}
		else if (choice == 'y' || choice == 'Y') {
			continue;
		}
	} while (true);
}
